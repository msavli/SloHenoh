sed -i 's/\">\[Vp/\">\[Song/g'      enghenoh_work.xml
sed -i 's/\">\[Zah/\">\[Zech/g'     enghenoh_work.xml
sed -i 's/\">\[Å½al/\">\[Lam/g'      enghenoh_work.xml


# Pa se brez oglatih oklepajev
sed -i 's/\">1 Jn/\">1John/g'   enghenoh_work.xml
